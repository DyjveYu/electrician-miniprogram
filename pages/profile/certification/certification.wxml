<!-- pages/profile/certification/certification.wxml -->
<view class="container">
  <view class="header">
    <view class="title">电工认证</view>
    <view class="subtitle" wx:if="{{mode === 'apply'}}">请填写真实信息，审核通过后可接单</view>
    <view class="subtitle" wx:if="{{mode === 'view'}}">
      <text class="status-tag {{certificationStatus === 'approved' ? 'approved' : certificationStatus === 'rejected' ? 'rejected' : 'pending'}}">
        {{certificationStatus === 'approved' ? '已认证' : certificationStatus === 'rejected' ? '已拒绝' : '认证中'}}
      </text>
    </view>
  </view>

  <!-- 查看模式下的拒绝原因 -->
  <view class="reject-reason" wx:if="{{mode === 'view' && certificationStatus === 'rejected'}}">
    <view class="reason-title">拒绝原因：</view>
    <view class="reason-content">{{rejectReason || '未提供拒绝原因'}}</view>
    <button class="reapply-btn" bindtap="reapplyCertification">重新申请</button>
  </view>

  <!-- 申请表单 -->
  <view class="form-container" wx:if="{{mode === 'apply' || mode === 'view'}}">
    <!-- 从事工作类型 -->
    <view class="form-group">
      <view class="form-label">你从事的工作</view>
      <checkbox-group class="checkbox-group" bindchange="onWorkTypesChange">
        <label class="checkbox-item">
          <checkbox value="maintenance" checked="{{isMaintenanceChecked}}" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}" />
          <text>维修电工</text>
        </label>
        <label class="checkbox-item">
          <checkbox value="installation" checked="{{isInstallationChecked}}" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}" />
          <text>安装电工</text>
        </label>
      </checkbox-group>
    </view>

    <view class="form-group">
      <view class="form-label">姓名</view>
      <input class="form-input" placeholder="请输入真实姓名" value="{{formData.realName}}" data-field="realName" bindinput="onInputChange" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}" />
    </view>

    <view class="form-group">
      <view class="form-label">身份证号</view>
      <input class="form-input" placeholder="请输入身份证号码" value="{{formData.idCard}}" data-field="idCard" bindinput="onInputChange" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}" />
    </view>

    <view class="form-group">
      <view class="form-label">电工证号</view>
      <input class="form-input" placeholder="请输入电工证编号" value="{{formData.certificateNumber}}" data-field="certificateNumber" bindinput="onInputChange" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}" />
    </view>

    <view class="form-group">
      <view class="form-label">证书开始日期</view>
      <picker mode="date" value="{{formData.certificateStartDate}}" start="2000-01-01" end="2050-12-31" bindchange="bindDateChange" data-field="certificateStartDate" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}">
        <view class="form-input {{formData.certificateStartDate ? '' : 'placeholder'}}">
          {{formData.certificateStartDate || '请选择开始日期'}}
        </view>
      </picker>
    </view>

    <view class="form-group">
      <view class="form-label">证书截止日期</view>
      <picker mode="date" value="{{formData.certificateEndDate}}" start="2000-01-01" end="2050-12-31" bindchange="bindDateChange" data-field="certificateEndDate" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}">
        <view class="form-input {{formData.certificateEndDate ? '' : 'placeholder'}}">
          {{formData.certificateEndDate || '请选择截止日期'}}
        </view>
      </picker>
    </view>

    <view class="form-group">
      <view class="form-label">服务区域</view>
      <view class="location-wrapper">
        <picker mode="region" value="{{region}}" custom-item="{{customItem}}" bindchange="bindRegionChange" disabled="{{mode === 'view' && certificationStatus !== 'approved'}}">
          <view class="form-input region-input {{region[0] ? '' : 'placeholder'}}">
            {{region[0] ? region[0] + region[1] + region[2] : (formData.serviceArea || '请选择服务区域')}}
          </view>
        </picker>
        <view class="location-btn" bindtap="getLocation" wx:if="{{mode === 'apply' || (mode === 'view' && certificationStatus === 'approved')}}">
          <text class="location-icon">📍</text>
        </view>
      </view>
    </view>

    <view class="upload-section">
      <view class="upload-title">证件照片</view>

      <view class="cert-upload-item" bindtap="navigateToIdentity">
        <view class="cert-info">
          <view class="cert-name">身份证件</view>
          <view class="cert-status {{idCardFrontPath && idCardBackPath ? 'done' : ''}}">
            {{idCardFrontPath && idCardBackPath ? '已上传' : '未上传'}}
          </view>
        </view>
        <view class="arrow">></view>
      </view>
      <view class="cert-upload-item" bindtap="navigateToElectricianCert">
        <view class="cert-info">
          <view class="cert-name">电工证件</view>
          <view class="cert-status {{certificatePath ? 'done' : ''}}">
            {{certificatePath ? '已上传' : '未上传'}}
          </view>
        </view>
        <view class="arrow">></view>
      </view>
    </view>

    <view class="tips">
      <view class="tips-title">温馨提示</view>
      <view class="tips-content">
        <text>1. 请确保填写的信息真实有效</text>
        <text>2. 电工证必须在有效期内</text>
        <text>3. 审核通过后即可接单</text>
      </view>
    </view>

    <button class="submit-btn {{submitDisabled ? 'disabled' : ''}}" bindtap="submitCertification" disabled="{{submitDisabled}}" wx:if="{{mode === 'apply' && certificationStatus !== 'pending'}}">{{reapply ? '重新认证' : '提交认证'}}</button>
    <button class="reapply-btn {{submitting ? 'disabled' : ''}}" wx:if="{{mode === 'view' && certificationStatus === 'approved'}}" bindtap="reapplyCertification" disabled="{{submitting}}">重新认证</button>

    </view>
  <!-- 审核中状态 -->
  <view class="pending-container" wx:if="{{mode === 'view' && certificationStatus === 'pending'}}">
    <view class="pending-title">认证审核中</view>
    <view class="pending-desc">您的电工认证申请已提交，通常需要1-3个工作日，审核结果将通过消息通知您</view>
  </view>
</view>
